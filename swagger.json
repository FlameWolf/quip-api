{
	"securityDefinitions": {
		"Bearer": {
			"type": "apiKey",
			"name": "Authorization",
			"in": "header",
			"description": "Enter your bearer token in the format **Bearer &#x3C;token&#x3E;**"
		}
	},
	"security": [
		{
			"Bearer": []
		}
	],
	"paths": {
		"/auth/sign-up": {
			"post": {
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"handle": {
									"type": "string"
								},
								"password": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"/auth/sign-in": {
			"post": {
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"handle": {
									"type": "string"
								},
								"password": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"/posts/create": {
			"post": {
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"content": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"/posts/reply/{postId}": {
			"post": {
				"parameters": [
					{
						"name": "postId",
						"required": true,
						"type": "string"
					},
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"content": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"/settings/mute": {
			"post": {
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"word": {
									"type": "string"
								},
								"match": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"/settings/unmute": {
			"post": {
				"parameters": [
					{
						"name": "body",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"properties": {
								"word": {
									"type": "string"
								},
								"match": {
									"type": "string"
								}
							}
						}
					}
				]
			}
		}
	}
}